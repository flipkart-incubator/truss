{
  "name": "truss",
  "version": "0.1.0",
  "description": "The Scalable JavaScript Application Framework",
  "main": "lib/index.js",
  "directories": {
    "doc": "docs",
    "example": "examples",
    "test": "test"
  },
  "scripts": {
    "lint": "./node_modules/.bin/eslint ./src",
    "build": "npm run build:commonjs && npm run build:umd && npm run build:umd:min",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build:umd": "cross-env BABEL_ENV=commonjs NODE_ENV=development webpack src/index.js dist/truss.js",
    "build:umd:min": "cross-env BABEL_ENV=commonjs NODE_ENV=production webpack src/index.js dist/truss.min.js",
    "test": "npm run server; cd ./tests;./nightwatch --test index_spec.js;",
    "server": "cd examples; http-server &"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flipkart-incubator/truss.git"
  },
  "keywords": [
    "JavaScript",
    "Framework",
    "Modular",
    "Scalable"
  ],
  "author": "truss-developers@flipkart.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/flipkart-incubator/truss/issues"
  },
  "devDependencies": {
    "babel-cli": "6.7.7",
    "babel-loader": "6.2.4",
    "babel-plugin-transform-object-assign": "6.8.0",
    "babel-preset-es2015": "6.6.0",
    "cross-env": "1.0.7",
    "nightwatch": "0.8.18",
    "webpack": "1.13.0",
    "autoprefixer-loader": "^3.2.0",
    "babel-core": "^6.5.2",
    "babel-plugin-transform-runtime": "6.8.0",
    "babel-polyfill": "6.9.0",
    "babel-preset-stage-0": "6.5.0",
    "babel-runtime": "6.6.1",
    "clean-webpack-plugin": "^0.1.8",
    "css-loader": "^0.23.1",
    "es6-promise": "2.3.0",
    "handlebars-loader": "^1.1.4",
    "handlebars-template-loader": "^0.5.7",
    "html-webpack-plugin": "^2.9.0",
    "less": "^2.6.0",
    "less-loader": "^2.2.2",
    "lodash": "3.9.3",
    "merge-stream": "0.1.7",
    "node-libs-browser": "^1.0.0",
    "script-loader": "^0.6.1",
    "style-loader": "^0.13.0",
    "underscore": "1.8.3",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "es6-promise": "3.1.2",
    "handlebars": "^4.0.5",
    "router5": "^3.0.3",
    "router5-history": "^3.0.3",
    "router5-listeners": "^3.0.0"
  }
}
